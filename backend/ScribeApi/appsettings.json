{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:4200"
    ]
  },
  "Diagnostics": {
    "ApiKey": "development-diag-key"
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "Issuer": "ScribeApi",
    "Audience": "ScribeApiUser",
    "ExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 7
  },
  "Storage": {
    "Provider": "S3",
    "PresignedUrlExpiryMinutes": 60,
    "MultipartThresholdBytes": 209715200,
    "PartSizeBytes": 52428800,
    "Local": {
      "BasePath": "Uploads"
    },
    "S3": {
      "BucketName": "micro-scribeisa",
      "Region": "eu-north-1"
    }
  },
  "EmailSettings": {
    "From": "noreply@scribeapi.com",
    "SmtpServer": "localhost",
    "Port": 25
  },
  "OpenAi": {
    "ApiKey": ""
  },
  "YouTube": {
    "ApiKey": "",
    "ApplicationName": "MicroScribe"
  },
  "Transcription": {
    "ChunkDurationMinutes": 10,
    "ChunkThresholdMinutes": 30
  },
  "Plans": {
    "Plans": [
      {
        "PlanType": "Free",
        "DailyTranscriptionLimit": 3,
        "MaxMinutesPerFile": 10,
        "MaxFileSizeBytes": 104857600,
        "MaxFilesPerUpload": 1,
        "MaxConcurrentJobs": 1,
        "TranscriptionJobPriority": false,
        "AllowTranslation": false,
        "AllowAllModels": false,
        "AllowedExportFormats": [
          "Txt"
        ],
        "UnlimitedStorage": false
      },
      {
        "PlanType": "Pro",
        "DailyTranscriptionLimit": null,
        "MaxMinutesPerFile": 180,
        "MaxFileSizeBytes": 2147483648,
        "MaxFilesPerUpload": 20,
        "MaxConcurrentJobs": 5,
        "TranscriptionJobPriority": true,
        "AllowTranslation": true,
        "AllowAllModels": true,
        "AllowedExportFormats": [
          "Txt",
          "Srt",
          "Vtt",
          "Json",
          "Word",
          "Csv",
          "Audio"
        ],
        "UnlimitedStorage": true
      }
    ]
  },
  "Stripe": {
    "SecretKey": "sk_test_YOUR_KEY_HERE",
    "PublishableKey": "pk_test_YOUR_KEY_HERE",
    "WebhookSecret": "whsec_YOUR_SECRET_HERE",
    "ProPriceId": "price_YOUR_PRICE_ID_HERE",
    "SuccessUrl": "http://localhost:3000/billing/success",
    "CancelUrl": "http://localhost:3000/billing/cancel"
  },
  "OAuth": {
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUri": "http://localhost:3000/auth/callback/google"
    },
    "Microsoft": {
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUri": "http://localhost:3000/auth/callback/microsoft"
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "GlobalLimits": {
      "FreeTier": {
        "PermitLimit": 100,
        "WindowSeconds": 60
      },
      "ProTier": {
        "PermitLimit": 500,
        "WindowSeconds": 60
      }
    },
    "AzureBlob": {
      "ConnectionString": "UseDevelopmentStorage=true",
      "ContainerName": "media-files"
    },
    "AuthLimits": {
      "FreeTier": {
        "PermitLimit": 5,
        "WindowSeconds": 60
      },
      "ProTier": {
        "PermitLimit": 20,
        "WindowSeconds": 60
      }
    },
    "TranscriptionLimits": {
      "FreeTier": {
        "PermitLimit": 10,
        "WindowSeconds": 60
      },
      "ProTier": {
        "PermitLimit": 50,
        "WindowSeconds": 60
      }
    },
    "UploadLimits": {
      "FreeTier": {
        "PermitLimit": 10,
        "WindowSeconds": 60
      },
      "ProTier": {
        "PermitLimit": 50,
        "WindowSeconds": 60
      }
    }
  }
}