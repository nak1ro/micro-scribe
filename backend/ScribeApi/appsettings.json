    "ChunkDurationMinutes": 10,
    "ChunkThresholdMinutes": 30
  },
  "Plans": {
    "Plans": [
      {
        "PlanType": "Free",
        "DailyTranscriptionLimit": 3,
        "MaxMinutesPerFile": 10,
        "MaxFileSizeBytes": 104857600,
