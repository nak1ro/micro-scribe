{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "Diagnostics": {
    "ApiKey": "development-diag-key"
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "Issuer": "ScribeApi",
    "Audience": "ScribeApiUser",
    "ExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 7
  },
  "EmailSettings": {
    "From": "",
    "SmtpServer": "",
    "Port": 0
  },
  "OpenAi": {
    "ApiKey": ""
  },
  "YouTube": {
    "ApiKey": "",
    "ApplicationName": "MicroScribe"
  },
